# 主站点配置
example.com {  # 替换为你的域名
  # 根目录设置
    root * /html
#    file_server {
#        # 启用 Gzip 压缩
#        encode gzip zstd
#    }

  # HTTP/3 声明头
#    header {
#         # 声明支持 HTTP/3
#         Alt-Svc h3=":443"; ma=86400
#        }

    # 日志配置
    log {
        output stdout
        format console
    }

    # 安全增强头
    header {
        # 内容安全策略
        Content-Security-Policy "default-src 'self'"
        # XSS 防护
        X-XSS-Protection "1; mode=block"
        # 禁用 MIME 类型嗅探
        X-Content-Type-Options "nosniff"
        # 防止点击劫持
        X-Frame-Options "DENY"
    }

 }