FROM jenkins/inbound-agent:latest

USER root

# 安装常用工具
RUN apt-get update && \
    apt-get install -y \
    procps \
    curl \
    git \
    vim \
    unzip \
    iputils-ping \
    net-tools \
    docker.io

USER jenkins


